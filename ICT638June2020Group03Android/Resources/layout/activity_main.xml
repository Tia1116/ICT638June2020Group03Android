<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />

     <Button
        android:id="@+id/button1"
        android:text="@string/btn1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv1Text"
        android:layout_below="@id/button1"/>

    <Button
        android:id="@+id/button2"
        android:text="@string/btn2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView1"/>

       <TextView
        android:id="@+id/textView2"
        android:text="House address"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"/>

        <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"/>

       
    <Button
        android:id="@+id/button3"
        android:text="House more detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editText1"
        android:clickable="true"/>

        <TextView
        android:id="@+id/txtrenthouse1"
        android:text="city 247"
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button3"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_gravity="center_vertical"
        android:src="@drawable/House1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtrenthouse1"/>

    <TextView
        android:id="@+id/txtrenthouse1bedroom"
        android:layout_below="@id/imageView1"
        android:text="This is bedroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textSize="14dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txtrenthouse1bedroomrespond"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_below="@id/txtrenthouse1bedroom"/>

    <TextView
        android:id="@+id/txtrenthouse1address"
        android:text="This is address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14dp" 
        android:layout_below="@id/txtrenthouse1bedroomrespond"/>

    <TextView
        android:id="@+id/txtrenthouse1addressrespond"
        android:textSize="14dp" 
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtrenthouse1address"/>

    <TextView
        android:id="@+id/txtrenthouse1kitchendetail"
        android:layout_below="@id/txtrenthouse1addressrespond"
        android:text="This is kitchen"
        android:textSize="14dp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txthouse1kitchenrespond"
        android:layout_below="@id/txtrenthouse1kitchendetail"
        android:textStyle="bold|italic"
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtrenthouse1pay"
        android:text="This is payment"
        android:textSize="14dp"
        android:textStyle="bold|italic"
         android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txthouse1kitchenrespond"/>

     </RelativeLayout>