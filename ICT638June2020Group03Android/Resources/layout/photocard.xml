<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"  
             xmlns:card_view="http://schemas.android.com/apk/res-auto"  
             android:layout_width="fill_parent"  
             android:layout_height="wrap_content">  
  <android.support.v7.widget.CardView  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"  
    card_view:cardElevation="4dp"  
    card_view:cardCornerRadius="5dp"  
    card_view:cardUseCompatPadding="true">  
    <LinearLayout  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"  
    android:orientation="vertical"  
    android:padding="8dp">  
      <ImageView  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"  
    android:id="@+id/imageView"  
    android:scaleType="fitCenter"/>  
    <TextView  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"  
    android:textAppearance="?android:attr/textAppearanceMedium"  
    android:textColor="#333333"  
    android:text="House"  
    android:id="@+id/textView"  
    android:layout_gravity="center_horizontal"  
    android:layout_marginLeft="4dp"/>  

    <EditText
        android:id="@+id/editText1"
         android:text="House1 Rent: 256dollars per week"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

        <EditText
        android:id="@+id/editText2"
        android:text="Bedroom number: 3 rooms"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

            <EditText
        android:id="@+id/editText3"
         android:text="House2 Rent: 365dollars per week"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

        <EditText
        android:id="@+id/editText4"
        android:text="Bedroom number: 4 rooms"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

 <ImageView
        android:id="@+id/imageView1"
        android:layout_gravity="center_vertical"
        android:src="@drawable/House2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtrenthouse1"/>



       <Button
    android:id="@+id/button4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="back"
    android:clickable="true"
    android:padding="5dp"/>

    </LinearLayout>  
  </android.support.v7.widget.CardView>  
</FrameLayout>